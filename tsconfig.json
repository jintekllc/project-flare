{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2022",
    ],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ]
}